# Philips Hue credentials
hue:
  api_key: "YOUR_HUE_API_KEY_HERE"
  bridge_id: "YOUR_BRIDGE_ID_HERE"
# Google Nest credentials
nest:
  client_id: "YOUR_NEST_CLIENT_ID_HERE"
  client_secret: "YOUR_NEST_CLIENT_SECRET_HERE"
  refresh_token: "YOUR_NEST_REFRESH_TOKEN_HERE"
  project_id: "YOUR_GCP_PROJECT_ID_HERE"
# Weather API credentials
weather:
  api_key: "YOUR_WEATHER_API_KEY_HERE"
  provider: "openweathermap"
  location: "YOUR_LOCATION_HERE"
# Amazon Alexa Air Quality Monitor credentials (cookie-based)
amazon_aqm:
  cookies:
    # Run the cookie capture tool to get these values:
    # python -m source.collectors.amazon_auth
    at-main: "YOUR_AT_MAIN_COOKIE"
    csrf: "YOUR_CSRF_TOKEN"
    lc-main: "YOUR_LC_MAIN_COOKIE"
    sess-at-main: "YOUR_SESS_AT_MAIN_COOKIE"
    session-id: "YOUR_SESSION_ID_COOKIE"
    session-id-time: "YOUR_SESSION_ID_TIME_COOKIE"
    session-token: "YOUR_SESSION_TOKEN_COOKIE"
    ubid-main: "YOUR_UBID_MAIN_COOKIE"
    x-main: "YOUR_X_MAIN_COOKIE"
    # Add any other cookies captured from Amazon login
