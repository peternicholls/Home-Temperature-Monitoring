# Secrets Contract: secrets.yaml.example
# Sprint 0: Project Foundation
# Purpose: Template for API credentials (DO NOT commit secrets.yaml with real values)

# Philips Hue credentials (required for Sprint 1)
hue:
  # API key generated via Bridge button press authentication
  # Example: "1234567890abcdef1234567890abcdef12345678"
  api_key: "YOUR_HUE_API_KEY_HERE"
  
  # Local IP address of Hue Bridge
  # Find via Hue app or network scan
  # Example: "192.168.1.100"
  bridge_ip: "YOUR_HUE_BRIDGE_IP_HERE"

# Google Nest credentials (required for Sprint 2)
nest:
  # OAuth 2.0 client ID from Google Cloud Console
  # Example: "123456789-abcdefghijklmnop.apps.googleusercontent.com"
  client_id: "YOUR_NEST_CLIENT_ID_HERE"
  
  # OAuth 2.0 client secret from Google Cloud Console
  # Example: "GOCSPX-abcdefghijklmnopqrstuvwx"
  client_secret: "YOUR_NEST_CLIENT_SECRET_HERE"
  
  # OAuth 2.0 refresh token (obtained after initial auth flow)
  # Generated during first authentication
  # Example: "1//0abcdefghijklmnopqrstuvwxyz"
  refresh_token: "YOUR_NEST_REFRESH_TOKEN_HERE"
  
  # Google Cloud project ID
  # Example: "home-temp-monitoring-12345"
  project_id: "YOUR_GCP_PROJECT_ID_HERE"

# Weather API credentials (required for Sprint 2/3)
weather:
  # API key from weather service provider
  # Supports: OpenWeatherMap, WeatherAPI, etc.
  # Example: "abcdef1234567890abcdef1234567890"
  api_key: "YOUR_WEATHER_API_KEY_HERE"
  
  # API provider name
  # Options: "openweathermap", "weatherapi"
  # Example: "openweathermap"
  provider: "openweathermap"
  
  # Location for weather readings
  # Format depends on provider (city name, lat/lon, etc.)
  # Example: "London,UK" or "51.5074,-0.1278"
  location: "YOUR_LOCATION_HERE"

# Setup Instructions:
# 1. Copy this file to config/secrets.yaml
# 2. Replace all "YOUR_*_HERE" values with actual credentials
# 3. Verify config/secrets.yaml is in .gitignore
# 4. Never commit secrets.yaml to version control
# 5. Keep this .example file with placeholder values only
